# Retorna a string correspondente à opção escolhida
def retorna_jogada(opcao):
    jogadas = ['Pedra', 'Papel', 'Tesoura']
    return jogadas[opcao-1]

# Identifica o resultado da jogada
def resultado(opcao, opcao_maquina):
    if (opcao == opcao_maquina):
        return 'empatou'
    elif (opcao == 1) and (opcao_maquina == 3):
        return 'ganhou'
    elif (opcao == 2) and (opcao_maquina == 1):
        return 'ganhou'
    elif (opcao == 3) and (opcao_maquina == 2):
        return 'ganhou'
    else:
        return 'perdeu'
    
